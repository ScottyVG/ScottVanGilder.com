{
  "name": "scott-van-gilder",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run sync-blog && next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:secrets": "gitleaks detect --source . --report-path gitleaks-report.json",
    "pre-commit": "npm run lint && npm run security:audit && npm run security:secrets",
    "sync-blog": "node scripts/sync-blog-data.js",
    "generate-og": "node scripts/generate-og-image.js",
    "generate-favicon": "node scripts/generate-favicon.js",
    "generate-apple-icon": "node scripts/generate-apple-icon.js",
    "setup-assets": "npm run generate-og && npm run generate-favicon && npm run generate-apple-icon"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "canvas": "^2.11.2",
    "gray-matter": "^4.0.3",
    "next": "^16.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "remark-rehype": "^11.1.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.35",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  },
  "overrides": {
    "glob": "^11.0.0",
    "tar": "^7.5.7"
  }
}
